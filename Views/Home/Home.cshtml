@{
    ViewData["Title"] = "Velkommen til Kartverket";
}

<div style="text-align: center; padding: 20px; max-width: 800px; margin: auto; position: relative; z-index: 1;">
    <h1 style="font-size: 2.5em; font-weight: bold; margin-bottom: 10px;">Velkommen til Kartverket</h1>
    <p style="font-size: 1.2em; color: #555; margin-bottom: 20px;">
        Logg inn/ Registrer deg for å rapportere feil og holde kartet oppdatert og nøyaktig.
    </p>
    
    <!-- Logg inn knapp -->
    <a asp-action="Login" class="btn btn-primary btn-lg" style="padding: 10px 20px; font-size: 1.1em;">
        <i class="fas fa-sign-in-alt"></i> Logg inn
    </a>
</div>

<style>
    body {
        background-image: url('/images/Norge natur.jpg'); /* Bytt ut med riktig bilde-URL */
        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;
        height: 100vh; /* Full høyde av viewport */
        width: 100%;
        margin: 0;
        padding: 0;
        display: flex;
        flex-direction: column;
    }

    footer {
        background-color: white;
        position: absolute;
        bottom: 0;
        left: 0;
        z-index: 2;
        padding: 10px 0;
        text-align: center;
        width: 100%;
    }
</style>

<footer>
    &copy; 2024 - Kartverket - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
</footer>