@{
    ViewData["Title"] = "Velkommen til Kartverket";
}

<div style="text-align: center; padding: 20px; max-width: 800px; margin: auto;">
    <h1 style="font-size: 2.5em; font-weight: bold; margin-bottom: 10px;">Velkommen til Kartverket</h1>
    <p style="font-size: 1.2em; color: #555; margin-bottom: 20px;">
        Logg inn for å rapportere feil og holde kartet oppdatert og nøyaktig.
    </p>
    
    <!-- Logg inn knapp -->
    <a asp-action="Login" class="btn btn-primary btn-lg" style="padding: 10px 20px; font-size: 1.1em;">
        <i class="fas fa-sign-in-alt"></i> Logg inn
    </a>
</div>

<!-- Kart seksjon -->
<div style="margin-top: 30px; text-align: center;">
    <div id="map" style="height: 500px; width: 90%; max-width: 1200px; margin: auto; border: 1px solid #ddd; box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2); border-radius: 8px;">
        <!-- Kartet vil bli lastet inn her -->
    </div>
</div>
