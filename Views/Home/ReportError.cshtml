@model MyMvcApp.Models.ErrorReport

<h2>Rapporter en feil</h2>

<form asp-action="SubmitErrorReport" method="post">
    <div class="form-group">
        <label for="description">Beskrivelse av feil</label>
        <textarea asp-for="Description" class="form-control" id="description" rows="3" required></textarea>
    </div>
    <div class="form-group">
        <label for="location">Sted</label>
        <input asp-for="Location" class="form-control" id="location" required />
    </div>
    <button type="submit" class="btn btn-primary mt-3">Send inn</button>
</form>
