    .privacy-section {
        font-family: Arial, sans-serif;
        line-height: 1.6;
    }
    .privacy-section h2 {
        margin-top: 20px;
        font-size: 1.5em;
    }
    .privacy-section ul {
        list-style-type: disc;
        margin-left: 20px;
    }
    .faq h3 {
        margin-top: 15px;
        font-size: 1.2em;
    }
    .updated-date {
        margin-top: 20px;
